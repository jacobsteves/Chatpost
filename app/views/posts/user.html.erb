<%= render "layouts/nav" %>
<div class="container">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12 blog-content">
    <% current_user.posts.each do |post| %>
      <div class="col-xs-12">
        <div class="text-center">
          <h2><%= post.title %></h2>
          <h6>Written by: <%= current_user.name %>, on <%= post.created_at.strftime('%b %d, %Y') %></h6>
        </div>

        <div>
          <%= raw(post.body.truncate(1000)) %>
        </div>

        <div class="text-center">
          <%= link_to "READ MORE", post_path(post) %>
        </div>
        <br>
      </div>
    <% end %>
  </div>
</div>
